---
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  siteTitle?: string;
}

const { title = "", description = "", siteTitle: siteTitleProp } = Astro.props;
const config = await import("../config.json").then((m) => m.default);
const siteTitle = siteTitleProp ?? config.site?.title ?? "homepage";
const siteDesc = config.site?.description ?? "";
const pageTitle = title ? `${title} | ${siteTitle}` : siteTitle;
const metaDesc = description || siteDesc;
---

<!doctype html>
<html lang="ja" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark" />
    <meta name="description" content={metaDesc} />
    <title>{pageTitle}</title>
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2173470513894649"
      crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600&family=IBM+Plex+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
      crossorigin="anonymous"
    />
    <style is:global>
      :root {
        --color-bg: #161616;
        --color-text: #e8e8e8;
        --color-muted: #9a9a9a;
        --color-border: #3a3a3a;
        --color-accent: #7eb8f7;
        --font-sans:
          "IBM Plex Sans", -apple-system, BlinkMacSystemFont, sans-serif;
        --font-mono: "IBM Plex Mono", ui-monospace, monospace;
      }

      * {
        box-sizing: border-box;
      }

      html {
        font-size: 18px;
        -webkit-font-smoothing: antialiased;
        color-scheme: dark;
      }

      body {
        margin: 0;
        padding: 0;
        font-family: var(--font-sans);
        color: var(--color-text);
        background: var(--color-bg);
        line-height: 1.65;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        margin: 0;
      }

      a {
        color: var(--color-accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      code,
      pre {
        font-family: var(--font-mono);
      }

      pre {
        overflow-x: auto;
        padding: 1rem 1.25rem;
        background: #252525;
        border-radius: 4px;
        font-size: 0.9rem;
      }

      code {
        font-size: 0.9em;
        padding: 0.15em 0.4em;
        background: #252525;
        border-radius: 3px;
      }

      pre code {
        padding: 0;
        background: none;
      }

      h1,
      h2,
      h3,
      h4 {
        font-weight: 600;
        line-height: 1.3;
      }

      h2 {
        margin-top: 2rem;
        font-size: 1.4rem;
      }
      h3 {
        margin-top: 1.5rem;
        font-size: 1.2rem;
      }

      /* リンクカード (rehype-og-card) */
      .og-card-container {
        margin: 1.5rem 0;
        border: 1px solid var(--color-border);
        border-radius: 8px;
        overflow: hidden;
      }
      .og-card-container a {
        display: flex;
        text-decoration: none;
        color: inherit;
      }
      .og-card-container a:hover {
        text-decoration: none;
      }
      .og-card-container:hover {
        border-color: var(--color-accent);
      }
      .og-card-info {
        flex: 1;
        padding: 1rem 1.25rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-width: 0;
      }
      .og-card-title {
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.35rem;
      }
      .og-card-description {
        font-size: 0.9rem;
        color: var(--color-muted);
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
      .og-card-url-container {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        margin-top: 0.5rem;
        font-size: 0.8rem;
        color: var(--color-muted);
      }
      .og-card-image-container {
        flex-shrink: 0;
        width: 140px;
        height: 105px;
        background: var(--color-border);
      }
      .og-card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      /* KaTeX ダークモード用 */
      .katex,
      .katex-display {
        color: var(--color-text);
      }
      .katex .mord {
        color: var(--color-text);
      }
    </style>
  </head>
  <body>
    <header
      style="border-bottom: 1px solid var(--color-border); margin-bottom: 2rem;"
    >
      <nav
        style="max-width: 56rem; margin: 0 auto; padding: 1rem 1.5rem; display: flex; align-items: center; gap: 1.5rem;"
      >
        <slot name="headerTitle">
          <a href="/" style="font-weight: 800;">nishima-techメモ</a>
        </slot>
        {
          config.routes
            ?.filter(
              (r: { path: string }) => r.path !== "/" && !r.path.includes("["),
            )
            ?.map((r: { path: string; title: string }) => (
              <a href={r.path}>{r.title}</a>
            ))
        }

        <a
          href="https://github.com/mitsuijao"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          style="margin-left: auto; display: flex; align-items: center; color: var(--color-text);"
        >
          <svg height="24" viewBox="0 0 16 16" width="24" fill="currentColor">
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
            ></path>
          </svg>
        </a>
      </nav>
    </header>
    <main
      style="flex: 1; width: 100%; max-width: 56rem; margin: 0 auto; padding: 0 1.5rem 4rem;"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
